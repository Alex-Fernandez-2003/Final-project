---
import Layout from '../layouts/LayoutAdmin.astro';
---
<Layout title="Login">
	<body>
        <div class="min-h-screen w-full bg-gradient-to-br from-green-900 via-green-800 to-green-950 flex items-center justify-center p-4">
            <div class="w-[350px] bg-black bg-opacity-50 backdrop-filter backdrop-blur-lg border border-gray-800 rounded-lg shadow-xl text-white p-6">
                <div id="login-content">
                    <h2 class="text-2xl font-bold text-green-400 mb-2">Iniciar sesión</h2>
                    <p class="text-gray-300 mb-6">Ingresa tus credenciales para acceder</p>
                    <form id="login-form" class="space-y-4">
                        <div>
                            <label for="username" class="block text-gray-200 mb-1">Nombre de usuario</label>
                            <input type="text" id="username" placeholder="Ingresa tu usuario"
                                class="w-full bg-gray-800 bg-opacity-50 text-white border border-gray-700 rounded-md p-2 placeholder-gray-400" />
                        </div>
                        <div>
                            <label for="password" class="block text-gray-200 mb-1">Contraseña</label>
                            <input type="password" id="password" placeholder="Ingresa tu contraseña"
                                class="w-full bg-gray-800 bg-opacity-50 text-white border border-gray-700 rounded-md p-2 placeholder-gray-400" />
                        </div>
                        <button type="submit"
                            class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-300">
                            Ingresar
                        </button>
                    </form>
                    <div id="error-message" class="mt-4 text-red-500 hidden"></div>
                </div>
            </div>
        </div>
    </body>
</Layout>

