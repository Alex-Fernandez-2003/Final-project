---
import { Icon } from 'astro-icon/components';
import Layout from '../../layouts/LayoutAdmin.astro';
---

<Layout title="Dashboard de Administración - Productos">
	<div class="min-h-screen w-full bg-gradient-to-br from-green-900 via-green-800 to-green-950 flex flex-col md:flex-row">
		<!-- Sidebar -->
		<aside class="w-full md:w-64 bg-black bg-opacity-50 backdrop-filter backdrop-blur-lg border-r border-gray-800 p-6 md:fixed md:h-full md:top-0">
			<h1 class="text-2xl font-bold text-green-400 mb-6">Admin Panel</h1>
			<nav>
				<ul class="space-y-2">
					<li>
						<a href="#" class="flex items-center text-gray-300 hover:text-white">
							<Icon name="mdi:view-dashboard" class="w-5 h-5 mr-2" />
							Dashboard
						</a>
					</li>
					<li>
						<a href="#" class="flex items-center text-white bg-green-600 rounded-md p-2">
							<Icon name="mdi:package-variant-closed" class="w-5 h-5 mr-2" />
							Productos
						</a>
					</li>
					<li>
						<a href="#" class="flex items-center text-gray-300 hover:text-white">
							<Icon name="mdi:cart" class="w-5 h-5 mr-2" />
							Pedidos
						</a>
					</li>
					<li>
						<a href="#" class="flex items-center text-gray-300 hover:text-white">
							<Icon name="mdi:account-group" class="w-5 h-5 mr-2" />
							Clientes
						</a>
					</li>
				</ul>
			</nav>
		</aside>

		<!-- Main Content -->
		<main class="flex-1 p-8 md:ml-64">
			<h2 class="text-3xl font-bold text-white mb-6">Gestión de Productos</h2>
			
			<!-- Search and Add Product -->
			<div class="flex flex-col sm:flex-row justify-between mb-6 space-y-4 sm:space-y-0">
				<div class="relative w-full sm:w-auto">
					<input type="text" placeholder="Buscar productos..." class="bg-gray-800 bg-opacity-50 text-white border border-gray-700 rounded-md p-2 pl-10 w-full sm:w-64">
					<Icon name="mdi:magnify" class="absolute left-3 top-2.5 text-gray-400 w-5 h-5" />
				</div>
				<button class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-300 flex items-center justify-center">
					<Icon name="mdi:plus" class="w-5 h-5 mr-2" />
					Añadir Producto
				</button>
			</div>

			<!-- Products Table -->
			<div class="bg-black bg-opacity-50 backdrop-filter backdrop-blur-lg border border-gray-800 rounded-lg shadow-xl text-white p-6 overflow-x-auto">
				<table class="w-full min-w-max">
					<thead>
						<tr class="text-left border-b border-gray-700">
							<th class="pb-2">ID</th>
							<th class="pb-2">Nombre</th>
							<th class="pb-2">Precio</th>
							<th class="pb-2">Stock</th>
							<th class="pb-2">Acciones</th>
						</tr>
					</thead>
					<tbody>
						<tr class="border-b border-gray-800">
							<td class="py-3">001</td>
							<td>Producto A</td>
							<td>$19.99</td>
							<td>50</td>
							<td>
								<button class="text-blue-400 hover:text-blue-300 mr-2">
									<Icon name="mdi:pencil" class="w-5 h-5" />
								</button>
								<button class="text-red-400 hover:text-red-300">
									<Icon name="mdi:delete" class="w-5 h-5" />
								</button>
							</td>
						</tr>
						<tr class="border-b border-gray-800">
							<td class="py-3">002</td>
							<td>Producto B</td>
							<td>$24.99</td>
							<td>30</td>
							<td>
								<button class="text-blue-400 hover:text-blue-300 mr-2">
									<Icon name="mdi:pencil" class="w-5 h-5" />
								</button>
								<button class="text-red-400 hover:text-red-300">
									<Icon name="mdi:delete" class="w-5 h-5" />
								</button>
							</td>
						</tr>
						<!-- Más filas de productos aquí -->
					</tbody>
				</table>
			</div>
		</main>
	</div>
</Layout>
