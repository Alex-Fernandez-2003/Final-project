---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string;
  title: string;
  clases?: string; 
  id?: string;
}

const { src, title, clases, id } = Astro.props;
---

{src.startsWith('http') ? (
  <img id={id} src={src} alt={title} class={` ${clases || ''}`} />
) : (
  <img id={id} src={src} alt={title} class={` ${clases || ''}`} />
)}
